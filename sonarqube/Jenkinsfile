node {
    def myGradleContainer = docker.image('gradle:jdk8-alpine')

    stage('Prepare') {
        myGradleContainer.pull()
        git branch: 'main', url: 'https://github.com/luimungar3/tienda.git'
    }

    stage('Build') {
        myGradleContainer.inside("-v ${env.HOME}/.gradle:/home/gradle/.gradle") {
            sh '/opt/gradle/bin/gradle -p complete build'
        }
    }
    stage('SonarQube Analysis') {
        tool name: 'sonar', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
        withCredentials([string(credentialsId: 'sonar', variable: 'sonarLogin')]) {
            sh """
                ${sonarqubeScannerHome}/bin/sonar-scanner \
                -Dsonar.host.url=http://sonarqube:9000 \
                -Dsonar.login=${sonarLogin} \
                -Dsonar.projectName=tienda \
                -Dsonar.projectVersion=${env.BUILD_NUMBER} \
                -Dsonar.projectKey=TIENDA \
                -Dsonar.sources=.admin \
                -Dsonar.java.binaries=build/classes \
                -Dsonar.tests=
            """
        }
    }

    
}

