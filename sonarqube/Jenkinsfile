pipeline {
    agent any

    environment {
        SONAR_HOST_URL = 'http://localhost:9001'  // URL de tu servidor SonarQube
        SONAR_LOGIN = 'sonar'  // Token de autenticaci√≥n de SonarQube
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/luimungar3/tienda.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    sh '''
                        sonar-scanner \
                        -Dsonar.projectKey=tienda \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=$SONAR_HOST_URL \
                        -Dsonar.login=$SONAR_LOGIN
                    '''
                }
            }
        }
    }
}
